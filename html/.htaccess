	RewriteRule ^gsu$ /education [L,R]
	RewriteRule ^bmw$ /work [L,R]
	RewriteRule ^soon\.php$ - [L,NC,R=404]
	RewriteRule ^sap\.php$ - [L,NC,R=404]

